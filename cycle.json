{
    "version": "1.0",
    "containers": {
      "frontend": {
        "name": "frontend",
        "image": {
          "name": "frontend",
          "origin": {
            "type": "docker-file",
            "details": {
              "existing": {
                  "source_id": "{{frontend-source-id}}"
              }
            }
          }
        },
        "config": {{config-1}}
      },
      "backend": {
        "name": "backend",
        "image": {
          "name": "backend",
          "origin": {
            "type": "docker-file",
            "details": {
              "existing": {
                  "source_id": "{{backend-source-id}}"
              }
            }
          }
        },
        "config": {
          "network": {
            "public": "enable",
            "hostname": "backend",
            "ports": ["80:3000", "443:3000"]
          },
          "deploy": {
            "instances": 1
          }
        }
      }
    }
  }